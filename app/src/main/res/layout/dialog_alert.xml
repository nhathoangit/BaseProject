<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_260dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_radius_dialog_white_90"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">


    <TextView
        android:id="@+id/dialogAlert_tvTitle"
        fontPath="@string/font_roboto_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_2dp"
        android:layout_marginTop="@dimen/_16dp"
        android:gravity="center"
        android:textColor="@color/black_87"
        android:textSize="17sp"
        tools:text="Error" />

    <TextView
        android:id="@+id/dialogAlert_tvContent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_21dp"
        android:layout_marginTop="@dimen/_2dp"
        android:gravity="center"
        android:paddingEnd="@dimen/_12dp"
        android:paddingStart="@dimen/_12dp"
        android:textColor="@color/black_87"
        android:textSize="13sp"
        tools:text="Delete" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/silver" />

    <TextView
        android:id="@+id/dialogAlert_tvBuySwopMark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:textColor="@color/cerulean"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="Test" />

    <FrameLayout
        android:id="@+id/dialogAlert_frmBuySwopMark"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/silver"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialogAlert_tvOK"
            android:layout_width="0dp"
            android:layout_height="@dimen/_44dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/cerulean"
            android:textSize="16sp" />

        <FrameLayout
            android:id="@+id/dialogAlert_frmLine"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@color/silver"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialogAlert_tvNo"
            android:layout_width="0dp"
            android:layout_height="@dimen/_44dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/no"
            android:textColor="@color/cerulean"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>